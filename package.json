{
  "name": "crt-vscode",
  "displayName": "CRT UI",
  "description": "A CRT inspired theme with cool effects including chrome styling",
  "version": "0.0.1",
  "author": "Leandro Rodrigues",
  "publisher": "leandro-rodrigues",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheOld/legacy-term"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "keywords": [
    "retro",
    "crt",
    "80s"
  ],
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onCommand:crt.viewSettings",
    "onCommand:crt.enableEffects",
    "onCommand:crt.disableEffects"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "esbuild": "^0.14.5",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.12",
    "file-url": "^3.0.0",
    "node-fetch": "^2.6.1",
    "postcss": "^8.4.5",
    "semver": "^7.1.1",
    "uglify-js": "^3.14.5",
    "uuid": "^8.3.2"
  },
  "contributes": {
    "themes": [
      {
        "label": "CRT",
        "uiTheme": "vs-dark",
        "path": "./themes/green.json"
      }
    ],
    "commands": [
      {
        "command": "crt.enableEffects",
        "title": "CRT: Enable theme"
      },
      {
        "command": "crt.viewSettings",
        "title": "CRT: Settings"
      },
      {
        "command": "crt.disableEffects",
        "title": "CRT: Disable theme"
      }
    ],
    "configuration": {
      "title": "CRT",
      "description": "You can manually set values here, but is just best to use the CRT Settings webview.",
      "properties": {
        "crt.brightness": {
          "type": "number",
          "default": 100,
          "description": "Set the brightness % value. Requires restart"
        },
        "crt.saturation": {
          "type": "number",
          "default": 100,
          "description": "Set the saturation % value. Requires restart"
        },
        "crt.contrast": {
          "type": "number",
          "default": 100,
          "description": "Set the contrast % value. Requires restart"
        },
        "crt.crt": {
          "type": "boolean",
          "default": true,
          "description": "Toggles the CRT effects. Requires restart"
        },
        "crt.color": {
          "type": "string",
          "default": "green",
          "description": "Set the color scheme. Requires restart"
        }
      }
    }
  }
}
