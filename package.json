{
  "name": "vt220-vscode",
  "displayName": "VT220 Terminal UI",
  "description": "A VT220 inspired theme with cool effects including chrome styling",
  "version": "0.0.1",
  "author": "Leandro Rodrigues",
  "publisher": "LeandroRodrigues",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheOld/legacy-term"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "keywords": [
    "retro",
    "crt",
    "80s"
  ],
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "*",
    "onCommand:vt220.viewSettings"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "VT220 Green",
        "uiTheme": "vs-dark",
        "path": "./themes/green-theme.json"
      },
      {
        "label": "VT220 Amber",
        "uiTheme": "vs-dark",
        "path": "./themes/amber-theme.json"
      },
      {
        "label": "VT220 Blue",
        "uiTheme": "vs-dark",
        "path": "./themes/blue-theme.json"
      }
    ],
    "commands": [
      {
        "command": "vt220.enableEffects",
        "title": "VT220: Enable theme"
      },
      {
        "command": "vt220.viewSettings",
        "title": "VT220: Settings"
      },
      {
        "command": "vt220.disableEffects",
        "title": "VT220: Disable theme"
      }
    ],
    "configuration": {
      "title": "VT220",
      "description": "You can manually set values here, but is just best to use the VT220 Settings webview.",
      "properties": {
        "vt220.brightness": {
          "type": "number",
          "default": 100,
          "description": "Set the brightness % value. Requires restart"
        },
        "vt220.saturation": {
          "type": "number",
          "default": 100,
          "description": "Set the saturation % value. Requires restart"
        },
        "vt220.contrast": {
          "type": "number",
          "default": 100,
          "description": "Set the contrast % value. Requires restart"
        },
        "vt220.crt": {
          "type": "boolean",
          "default": true,
          "description": "Toggles the CRT effects. Requires restart"
        }
      }
    }
  }
}
